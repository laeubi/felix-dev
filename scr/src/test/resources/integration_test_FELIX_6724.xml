<components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">

    <!-- Scenario 1: Three-way circular with mandatory dependencies
         A -> B (1..1) -> C (1..1) -> A (1..1)
         This is a real circular dependency and should not activate any component -->
    <scr:component name="felix6724.scenario1.A"
        enabled="false"
        configuration-policy="ignore">
        <implementation class="org.apache.felix.scr.integration.components.felix6724.ServiceA" />
        <service>
            <provide interface="org.apache.felix.scr.integration.components.felix6724.ServiceA" />
        </service>
        <reference
            name="serviceB"
            interface="org.apache.felix.scr.integration.components.felix6724.ServiceB"
            cardinality="1..1"
            policy="dynamic"
            bind="setServiceB"
            unbind="unsetServiceB"
            target="(service.pid=felix6724.scenario1.B)"
        />
        <property name="service.pid" value="felix6724.scenario1.A" />
    </scr:component>
    
    <scr:component name="felix6724.scenario1.B"
        enabled="false"
        configuration-policy="ignore">
        <implementation class="org.apache.felix.scr.integration.components.felix6724.ServiceB" />
        <service>
            <provide interface="org.apache.felix.scr.integration.components.felix6724.ServiceB" />
        </service>
        <reference
            name="serviceC"
            interface="org.apache.felix.scr.integration.components.felix6724.ServiceC"
            cardinality="1..1"
            policy="dynamic"
            bind="setServiceC"
            unbind="unsetServiceC"
            target="(service.pid=felix6724.scenario1.C)"
        />
        <property name="service.pid" value="felix6724.scenario1.B" />
    </scr:component>
    
    <scr:component name="felix6724.scenario1.C"
        enabled="false"
        configuration-policy="ignore">
        <implementation class="org.apache.felix.scr.integration.components.felix6724.ServiceC" />
        <service>
            <provide interface="org.apache.felix.scr.integration.components.felix6724.ServiceC" />
        </service>
        <reference
            name="serviceA"
            interface="org.apache.felix.scr.integration.components.felix6724.ServiceA"
            cardinality="1..1"
            policy="dynamic"
            bind="setServiceA"
            unbind="unsetServiceA"
            target="(service.pid=felix6724.scenario1.A)"
        />
        <property name="service.pid" value="felix6724.scenario1.C" />
    </scr:component>

    <!-- Scenario 2: Three-way with optional last link - should resolve
         A -> B (1..1) -> C (1..1) -> A (0..n)
         This should NOT be flagged as circular since A's dependency on C is optional -->
    <scr:component name="felix6724.scenario2.A"
        enabled="false"
        immediate="true"
        configuration-policy="ignore">
        <implementation class="org.apache.felix.scr.integration.components.felix6724.ServiceA" />
        <service>
            <provide interface="org.apache.felix.scr.integration.components.felix6724.ServiceA" />
        </service>
        <reference
            name="serviceB"
            interface="org.apache.felix.scr.integration.components.felix6724.ServiceB"
            cardinality="1..1"
            policy="dynamic"
            bind="setServiceB"
            unbind="unsetServiceB"
            target="(service.pid=felix6724.scenario2.B)"
        />
        <property name="service.pid" value="felix6724.scenario2.A" />
    </scr:component>
    
    <scr:component name="felix6724.scenario2.B"
        enabled="false"
        immediate="true"
        configuration-policy="ignore">
        <implementation class="org.apache.felix.scr.integration.components.felix6724.ServiceB" />
        <service>
            <provide interface="org.apache.felix.scr.integration.components.felix6724.ServiceB" />
        </service>
        <reference
            name="serviceC"
            interface="org.apache.felix.scr.integration.components.felix6724.ServiceC"
            cardinality="1..1"
            policy="dynamic"
            bind="setServiceC"
            unbind="unsetServiceC"
            target="(service.pid=felix6724.scenario2.C)"
        />
        <property name="service.pid" value="felix6724.scenario2.B" />
    </scr:component>
    
    <scr:component name="felix6724.scenario2.C"
        enabled="false"
        immediate="true"
        configuration-policy="ignore">
        <implementation class="org.apache.felix.scr.integration.components.felix6724.ServiceC" />
        <service>
            <provide interface="org.apache.felix.scr.integration.components.felix6724.ServiceC" />
        </service>
        <reference
            name="serviceA"
            interface="org.apache.felix.scr.integration.components.felix6724.ServiceA"
            cardinality="0..n"
            policy="dynamic"
            bind="setServiceA"
            unbind="unsetServiceA"
            target="(service.pid=felix6724.scenario2.A)"
        />
        <property name="service.pid" value="felix6724.scenario2.C" />
    </scr:component>

    <!-- Scenario 3: Three-way delayed with optional last link
         A -> B (1..1) -> C (1..1) -> A (0..1)
         Delayed activation, should resolve without circular dependency error -->
    <scr:component name="felix6724.scenario3.A"
        enabled="false"
        configuration-policy="ignore">
        <implementation class="org.apache.felix.scr.integration.components.felix6724.ServiceA" />
        <service>
            <provide interface="org.apache.felix.scr.integration.components.felix6724.ServiceA" />
        </service>
        <reference
            name="serviceB"
            interface="org.apache.felix.scr.integration.components.felix6724.ServiceB"
            cardinality="1..1"
            policy="dynamic"
            bind="setServiceB"
            unbind="unsetServiceB"
            target="(service.pid=felix6724.scenario3.B)"
        />
        <property name="service.pid" value="felix6724.scenario3.A" />
    </scr:component>
    
    <scr:component name="felix6724.scenario3.B"
        enabled="false"
        configuration-policy="ignore">
        <implementation class="org.apache.felix.scr.integration.components.felix6724.ServiceB" />
        <service>
            <provide interface="org.apache.felix.scr.integration.components.felix6724.ServiceB" />
        </service>
        <reference
            name="serviceC"
            interface="org.apache.felix.scr.integration.components.felix6724.ServiceC"
            cardinality="1..1"
            policy="dynamic"
            bind="setServiceC"
            unbind="unsetServiceC"
            target="(service.pid=felix6724.scenario3.C)"
        />
        <property name="service.pid" value="felix6724.scenario3.B" />
    </scr:component>
    
    <scr:component name="felix6724.scenario3.C"
        enabled="false"
        configuration-policy="ignore">
        <implementation class="org.apache.felix.scr.integration.components.felix6724.ServiceC" />
        <service>
            <provide interface="org.apache.felix.scr.integration.components.felix6724.ServiceC" />
        </service>
        <reference
            name="serviceA"
            interface="org.apache.felix.scr.integration.components.felix6724.ServiceA"
            cardinality="0..1"
            policy="dynamic"
            bind="setServiceA"
            unbind="unsetServiceA"
            target="(service.pid=felix6724.scenario3.A)"
        />
        <property name="service.pid" value="felix6724.scenario3.C" />
    </scr:component>

</components>
